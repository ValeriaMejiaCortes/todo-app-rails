/ Modal
#todoModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "todoModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      .modal-header
        %h5#todoModalLabel.modal-title Create a todo
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
      = form_with model: @todo, local:true do |form|
        .container_modal
          .form-group
            %label{:for => "title"} Title
            %br/
            %input#title.form-control{:type => "title", :name => "todo[title]"}/
          .form-group
            %label{:for => "text"} Description
            %br/
            %textarea#text.form-control{:rows => "3", :name => "todo[text]"}
          %button.btn.btn-primary{:type => 'submit'} Create
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
